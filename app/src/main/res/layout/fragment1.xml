<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:adjustViewBounds="true"
        android:divider="@drawable/sep1"
        android:showDividers="middle"    >


        <TableRow
            android:id="@+id/tableRow0"
            style="@style/TableRowForButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/arg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTextView"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextViewText"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            style="@style/TableRowForButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/idAC"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id_persent"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="36sp" />

            <Button
                android:id="@+id/plus_minus"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+/-"
                android:textSize="36sp" />

            <Button
                android:id="@+id/div"
                style="@style/ButtonOperations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="36sp" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            style="@style/TableRowForButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/id7"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id8"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id9"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="36sp" />

            <Button
                android:id="@+id/mul"
                style="@style/ButtonOperations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ã—"
                android:textSize="36sp" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow3"
            style="@style/TableRowForButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/id4"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id5"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id6"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="36sp" />

            <Button
                android:id="@+id/sub"
                style="@style/ButtonOperations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="36sp" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow4"
            style="@style/TableRowForButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/id1"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id2"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="36sp" />

            <Button
                android:id="@+id/id3"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/add"
                style="@style/ButtonOperations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="36sp" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow5"
            style="@style/TableRowForButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/id0"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="36sp" />

            <Button
                android:id="@+id/idTochka"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="."
                android:textSize="36sp" />

            <Button
                android:id="@+id/equals"
                style="@style/ButtonOperations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="="
                android:textSize="36sp" />

        </TableRow>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
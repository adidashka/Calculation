                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ex" />

            <Button
                android:id="@+id/x10"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10x" />

            <Button
                android:id="@+id/id7"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7" />

            <Button
                android:id="@+id/id8"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8" />

            <Button
                android:id="@+id/id9"
                style="@style/ButtonNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9" />

            <Button
                android:id="@+id/mul"
                style="@style/ButtonOperations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ã—" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow3"
            style="@style/TableRowForButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/obratna_funk"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1/x" />

            <Button
                android:id="@+id/sqrtx2"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="s2" />

            <Button
                android:id="@+id/sqrtx3"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="s3" />

            <Button
                android:id="@+id/sqrtxy"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="sxy" />

            <Button

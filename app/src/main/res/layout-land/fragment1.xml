                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ln" />

            <Button
                android:id="@+id/log10"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="l10" />

            <Button

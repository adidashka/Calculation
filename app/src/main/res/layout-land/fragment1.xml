                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorTextView"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextViewText" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            style="@style/TableRowForButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/skobkaOtkr"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="(" />

            <Button
                android:id="@+id/skobkaZakr"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=")" />

            <Button
                android:id="@+id/mc"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="mc" />

            <Button
                android:id="@+id/mPlus"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="m+" />

            <Button
                android:id="@+id/mMinus"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="m-" />

            <Button
                android:id="@+id/mr"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="mr" />

            <Button
                android:id="@+id/idAC"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/id_persent"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="%" />

            <Button
                android:id="@+id/plus_minus"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+/-" />

            <Button
                android:id="@+id/div"
                style="@style/ButtonOperations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            style="@style/TableRowForButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/nd2"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2nd" />

            <Button
                android:id="@+id/x2"
                style="@style/ButtonOperations2"
                android:layout_width="match_parent"

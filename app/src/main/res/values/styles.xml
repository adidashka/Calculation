<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonNumbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorNumbersButtonText</item>
        <item name="android:background">@drawable/but_number</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="ButtonOperations">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorOperationButtonText</item>
        <item name="android:background">@drawable/but_op</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonOperations2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorOperationButton2Text</item>
        <item name="android:background">@drawable/but_op2</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TableRowForButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:divider">@drawable/separator</item>
        <item name="android:showDividers">middle</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Sep1Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sep1</item>

    </style>


</resources>
